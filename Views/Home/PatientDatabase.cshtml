                <th>
                    @Html.DisplayNameFor(model => model.PatientDatabase.FirstOrDefault().MedicalHistory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientDatabase.FirstOrDefault().Medications)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientDatabase.FirstOrDefault().FamilyHistory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientDatabase.FirstOrDefault().ZipCode)
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var patientItem in Model.PatientDatabase)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => patientItem.HealthRecordsFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => patientItem.HealthRecordsLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => patientItem.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => patientItem.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => patientItem.Allergies)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => patientItem.DiagnosisandTestResults)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => patientItem.Immunizations)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => patientItem.MedicalHistory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => patientItem.Medications)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => patientItem.FamilyHistory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => patientItem.ZipCode)
                </td>
                <td>
                </td>
            </tr>
            }
        </tbody>

    </table>


    
