@model HealthCareProject.Models.PatientInformationForm
@{
    ViewData["Title"] = "Patient Database";
}

<h1>Patient Database</h1>

<p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PatientDatabase.FirstOrDefault().HealthRecordsFirstName)
