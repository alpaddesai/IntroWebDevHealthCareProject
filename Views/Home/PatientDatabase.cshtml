                <th>
                    @Html.DisplayNameFor(model => model.PatientDatabase.FirstOrDefault().HealthRecordsLastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientDatabase.FirstOrDefault().Height)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientDatabase.FirstOrDefault().Weight)
